<h1>Edit Shop</h1>

<div class="content">

  <h2>Edit Shop</h2>

  <form action="/shops/<%= @shop.id %>" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= @shop.name %>"><br>
    
    <label for="stock_kind">Stock_kind:</label>
    <input type="text" name="stock_kind" id="stock_kind" value="<%= @shop.stock_kind %>"><br>

    <label for="address">Address:</label>
    <input type="text" name="address" id="address" value="<%= @shop.address %>"><br>

    <input type='submit' value="Update Shop">
  </form>

  <form action="/shops/<%= @shop.id %>/delete" method="post">
    <input type="submit" value="Delete">
  </form>

</div>